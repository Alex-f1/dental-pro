.features
  color #fff
  padding-top 50px
  padding-bottom 50px
  background-image: linear-gradient(-59deg, #53bcf0 0%, #398bcb 100%)
  position relative
  overflow: hidden

  @media (min-width: 641px)
    padding-top 100px
    padding-bottom 100px

  @media (min-width: 1281px)    
    padding-top 130px

  &__inner
    position relative
    z-index 2

  &__head
    max-width 1085px
    width 100%
    position relative
    z-index 2
    margin-bottom 40px

    @media (min-width: 641px)  
      margin-bottom 60px

    @media (min-width: 1024px)  
      display flex

    @media (min-width: 1281px)  
      max-width 1276px

  &__title
    font-size: 24px
    color #fff
    font-weight: 400
    line-height: 1.1
    margin-top 0
    margin-bottom 18px
    width 100%

    @media (min-width: 641px)
      font-size: 42px
      margin-bottom 38px
    
    @media (min-width: 1281px)  
      font-size: 52px
      margin-bottom 0
  
  &__desc
    font-size: 15px
    font-weight: 400
    line-height: 1.4

    @media (min-width: 641px)
      font-size: 18px

    @media (min-width: 1024px)  
      max-width: 450px
      margin-left auto
    
    @media (min-width: 1281px)  
      font-size 20px
  
  &__cols
    display flex
    flex-wrap: wrap
    
    @media (min-width: 1025px)
      margin-left -70px

    @media (min-width: 1281px)    
      margin-left -100px
  
  &__col
    width 100%

    @media (min-width: 641px)
      width 50%

    @media (min-width: 1025px)
      padding-left 70px
      width 25%

    @media (min-width: 1281px)    
      padding-left 100px

  &__item
    margin-bottom 16px

    @media (min-width: 641px)
      margin-bottom 22px

  &__body
    display flex
    align-items center
  
  &__icon
    flex 0 0 16px
    width 16px
    max-width: 16px
    height 16px
    margin-right 12px
    position relative

    @media (min-width: 641px)
      flex 0 0 28px
      width 28px
      max-width: 28px
      height 28px
      margin-right 19px

    img
      vertical-align top
      position absolute
      top 50%
      left 50%
      transform: translate(-50%, -50%)

  &__name
    font-size: 15px
    font-weight: 300
    line-height: 1.4
  
  &__bottom
    display flex
    align-items center
    flex-direction: column
    padding 50px 20px 43px 20px
    box-shadow: 15px 15px 55px rgba(0, 0, 0, 0.1)
    border-radius: 62px
    background-color: #fff
    margin-top 30px

    @media (min-width: 641px)
      padding 73px 30px 53px 30px
      margin-top 60px

    @media (min-width: 1025px)
      border-radius: 320px
      padding 40px
      margin-top 70px
      flex-direction: row
      justify-content center

    @media (min-width: 1281px)    
      margin-top 98px

    strong
      color: #000
      font-size: 16px
      font-weight: 400
      line-height: 1.4
      margin-bottom 20px
      text-align center
      max-width: 190px

      @media (min-width: 641px)
        font-size 20px
        margin-bottom 25px
        max-width: none

      @media (min-width: 1025px)
        text-align-last left
        margin-right 70px
        margin-bottom 0 
      
      @media (min-width: 1281px)    
        font-size 22px
  
  &__circle
    width: 320px
    height: 320px
    border-radius: 50%
    background-image: linear-gradient(138deg, #091d3f 0%, #5981bf 100%)
    opacity: 0.36
    position absolute
    top 50%
    left 50%
    transform: translate(-50%, -50%)

    @media (min-width: 641px)
      width: 596px
      height: 596px

    @media (min-width: 1025px)
      top 77px
      transform: translateX(-50%)

    @media (min-width: 1281px)    
      width: 696px
      height: 696px
      top 88px
