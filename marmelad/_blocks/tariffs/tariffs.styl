.tariffs
  padding-top 45px
  padding-bottom 50px
  position relative
  overflow: hidden
  
  @media (min-width: 641px)
    padding-top 100px
    padding-bottom 74px

  @media (min-width: 1025px)
    padding-bottom 96px

  @media (min-width: 1281px)
    padding-bottom 120px

  &__container
    position relative
    z-index 2
  
  &__title
    color: #000
    font-size: 24px
    font-weight: 400
    line-height: 1.2
    text-align: center
    margin-top 0
    margin-bottom 0

    @media (min-width: 641px)
      font-size 42px

    @media (min-width: 1025px)
      margin-bottom 38px

    @media (min-width: 1281px)
      margin-bottom 54px
  
  &__items
    padding-top 38px
    padding-bottom 10px

    @media (min-width: 641px)
      padding-bottom 20px

    @media (min-width: 1025px)
      padding-top 45px
      padding-bottom 50px  
      margin-left -50px
      display flex

    @media (min-width: 1281px)
      padding-top 65px
      margin-left -65px
  
  &__item
    width 100%
    height: 200px
    margin-bottom 20px

    @media (min-width: 641px)
      margin-bottom 30px
      height: 270px

    @media (min-width: 1025px)
      width 33.333%
      height 435px
      padding-left 65px
      padding-left 50px
      height 355px
      margin-bottom 0

    @media (min-width: 1281px)
      padding-left 65px
      height 435px

  &__body
    display flex
    flex-direction: column
    justify-content center
    height: 100%
    padding 20px 20px 30px 30px
    box-shadow: 15px 15px 55px rgba(0, 0, 0, 0.1)
    border-radius: 10px
    background-color: #fff
    position relative

    @media (min-width: 480px)
      padding-right 120px

    @media (min-width: 641px)
      padding 50px 240px 50px 50px

    @media (min-width: 1025px)
      align-items center
      text-align center
      padding 50px

    @media (min-width: 1281px)
      padding 66px
  
  &__pic
    width: 80px
    height: 80px
    border-radius: 50%
    box-shadow: 15px 15px 55px #0000001a
    background-color: #fff
    top 20px
    right 20px
    position absolute
    
    @media (min-width: 641px)
      width: 170px
      height: 170px
      top 50%
      right 50px
      transform: translateY(-50%)
      
    @media (min-width: 1025px)
      flex 0 0 130px
      width: 130px
      max-width: 130px
      height: 130px
      margin-top: -100px
      margin-bottom 40px
      overflow: hidden
      position relative
      top auto
      right auto
      transform: translateY(0)

    @media (min-width: 1281px)
      flex 0 0 170px
      width: 170px
      max-width: 170px
      height: 170px
      margin-bottom 54px
      margin-top: -120px

    img
      vertical-align top
      position absolute
      top 50%
      left 50%
      transform: translate(-50%, -50%)
      width 60px

      @media (min-width: 641px)
        width auto

      @media (min-width: 1025px)
        width 85px

      @media (min-width: 1281px)
        width auto
    
  &__name
    color: #000
    font-size: 18px
    font-weight: 400
    line-height: 1.2
    margin-bottom 13px

    @media (min-width: 641px)
      font-size: 24px

    @media (min-width: 1025px)
      margin-bottom 20px

    @media (min-width: 1281px)
      font-size: 28px
  
  &__price
    font-size 16px
    color: #398bcb
    font-weight: 400
    line-height: 1.2
    margin-bottom 28px

    @media (min-width: 641px)
      font-size: 22px
      margin-bottom 20px
    
    @media (min-width: 1281px)
      font-size: 26px

  &__button-try
    max-width: 100%
    width 220px
    min-width auto

    @media (min-width: 641px)
      width 260px
      
    @media (min-width: 1281px)
      width 360px
      margin-top auto
  
  &__bottom
    display flex
    justify-content center
  
  &__circle
    width: 1213px
    height: 1213px
    background-color: #f3fafe
    position absolute
    left 50%
    bottom -740px
    transform: translateX(-50%)
    border-radius: 50%

    @media (min-width: 1025px)
      width: 810px
      height: 810px
      bottom -480px

    @media (min-width: 1281px)
      width: 1213px
      height: 1213px
      bottom -740px

  &__button-compares
    max-width: 100%
    width 220px
    min-width auto

    @media (min-width: 641px)
      width 260px

    @media (min-width: 1281px)
      width 300px