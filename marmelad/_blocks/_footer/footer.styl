.footer
  color #fff
  flex none
  padding-top 50px
  padding-bottom 54px
  background-image: linear-gradient(110deg, #091d3f 0%, #5981bf 100%)

  @media (min-width: 641px)
    padding-top 65px
    padding-bottom 40px
  
  @media (min-width: 1024px)
    padding-top 100px

  @media (min-width: 1600px)
    padding-bottom 54px

  a
    color #fff

  &__cols
    position relative

    @media (min-width: 1024px)
      display flex

    &--bottom
      margin-top 40px
      border-top: 1px solid rgba(255, 255, 255, 0.26)
      padding-top 20px
      position relative
      padding-right 20px
      padding-left 20px
      margin-right -20px
      margin-left -20px

      @media (min-width: 768px)
        margin-top 70px
        padding-top 40px
        padding-right 0
        padding-left 0
        margin-right 0
        margin-left 0

      .footer
        &__col
          @media (min-width: 768px) and (max-width: 1023px)
            width 75%
  &__col
    display flex
    width 100%

    @media (min-width: 1024px)
      width 50%
      margin-right 150px

    @media (min-width: 1600px)
      width 46%
      margin-right 200px

    &:nth-child(2)

      @media (min-width: 1024px)
        width 38%
        margin-right 77px

      @media (min-width: 1600px)
        margin-right 100px

    &:last-child
      margin-right 0

      @media (min-width: 1024px)
        width 13%
        
  
  &__contacts
    display flex
    flex-direction: column
  
  &__email
    font-size: 16px
    font-weight: 400
    line-height: 1
    text-decoration none
    margin-bottom 20px

    @media (min-width: 768px)
      font-size: 20px
      margin-bottom 30px
  
  &__phone
    font-size: 26px
    font-weight: 400
    line-height: 1
    text-decoration none
    margin-bottom 30px

    @media (min-width: 768px)
      font-size: 30px
  
  &__address
    font-size: 16px
    font-weight: 400
    line-height: 1.3

    @media (min-width: 768px)
      font-size: 20px
  
  &__app-items
    margin-top 30px
    display flex
    gap 7px
    margin-bottom 30px
    flex-direction: column

    @media (min-width: 375px)
      flex-direction: row

    @media (min-width: 768px)
      margin-top 65px
      gap 20px
      margin-bottom 62px
    
    @media (min-width: 1024px)
      margin-bottom 0

    @media (min-width: 1600px)
      gap 22px

  &__app-item
    text-decoration none
    width: 122px
    border-radius: 50px
    border: 2px solid #53bcf0
    display flex
    align-items center
    justify-content center
    padding 8px

    @media (min-width: 768px)
      flex 0 0 156px
      width: 156px
      max-width: 156px
      height: 50px

    i
      flex 0 0 20px
      width 20px
      max-width: 20px
      margin-right 10px

      @media (min-width: 768px)
        flex 0 0 23px
        width 23px
        max-width: 23px
        margin-right 12px

      img
        vertical-align top
    
    span
      font-size: 8px
      font-weight: 400
      line-height: 1

      @media (min-width: 768px)
        font-size: 10px

      strong
        font-size: 10px
        font-weight: 700
        display block
        margin-top 2px

        @media (min-width: 768px)
          font-size: 12px
          margin-top 4px

  &__menu
    width 100%
    display flex
    margin-bottom 15px

    @media (min-width: 768px)
      margin-bottom 0

    @media (min-width: 1024px)
      justify-content space-between
  
  &__nav
    margin-right 80px

    @media (min-width: 1024px)
      margin-right 0
    
    &:last-child
      margin-right 0

    ul
      list-style none
      padding-left 0
      margin 0

      li
        margin-bottom 25px

        a
          font-size: 15px
          font-weight: 300
          line-height: 1.2
          text-decoration none

          @media (min-width: 768px)
            font-size 17px

          &:hover
            text-decoration underline
  
  &__social-links
    display flex
    gap 16px

    @media (min-width: 375px)
      gap 27px

    @media (min-width: 768px)
      flex-direction: column
      gap 15px
      margin-left auto

    @media (min-width: 768px)
      position absolute
      top 0
      right 0

    @media (min-width: 1024px)
      position static
  
  &__social-link
    flex 0 0 35px
    width 35px
    max-width: 35px
    height 35px
  
  &__info
    width 100%
    @media (min-width: 1600px)
      display flex
  
  &__copyright
    display flex
    margin-bottom 28px

    @media (min-width: 768px)
      margin-bottom 40px

    @media (min-width: 1600px)
      margin-bottom 0
      margin-right 20px

    i
      flex 0 0 26px
      width 26px
      max-width: 26px
      margin-right 9px

      svg
        width 100%
        height 100%

      @media (min-width: 768px)
        flex 0 0 47px
        width 47px
        max-width: 47px
        margin-right 25px
    
    span
      font-size: 12px
      font-weight: 400
      line-height: 1.4
      align-self center

      @media (min-width: 768px)
        font-size 17px

      @media (min-width: 1024px)
        align-self flex-start

      br
        display none

        @media (min-width: 1024px)
          display block

  &__note
    opacity: 0.5
    font-size: 12px
    font-weight: 300
    line-height: 1.3
    margin-bottom 16px

    @media (min-width: 768px)
      margin-bottom 30px

    @media (min-width: 1024px)
      margin-bottom 0
      margin-left auto

    br
      display none

      @media (min-width: 1600px)
        display block

  &__policy
    opacity: 0.5
    font-size: 13px
    font-weight: 400
    line-height: 1.3
  
  &__make
    margin-top auto
    display flex
    align-items center
    justify-content center
    margin-top 23px
    width 100%    

    @media (min-width: 481px)
      width auto
      justify-content flex-start
    
    @media (min-width: 768px)
      margin-top 0
      position absolute
      bottom 0
      right 0

    @media (min-width: 1600px)
      position static

    span
      font-size: 13px
      font-weight: 400
      line-height: 1
    
    i
      margin-left 8px
      margin-right 8px
    
    a
      font-size: 13px
      font-weight: 400
      line-height: 1
      text-decoration none

      &:hover
        text-decoration underline
