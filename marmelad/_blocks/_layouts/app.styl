html,
body
  margin 0
  padding 0

html,
body
  min-height 100vh

html
  &._is-overflow-hidden
    overflow: hidden

.app
  display grid
  grid-template-rows: auto 1fr auto

  &__main
    overflow-x: hidden

.container
  max-width: 1600px + 15px + 15px
  width 100%
  padding-right 15px
  padding-left 15px
  margin 0 auto

  @media (min-width: 1025px)
    max-width: 1600px + 40px + 40px
    padding-right 40px
    padding-left 40px

.button-default
  color: #000000
  font-size: 14px
  font-weight: 400
  line-height: 1
  text-align: center
  text-decoration none
  background-color transparent
  min-width: 300px
  padding 15px 20px 16px 20px
  border-radius: 50px
  border: 2px solid #53bcf0
  cursor pointer
  overflow hidden
  position relative
  transition: 0.2s 0.1s

  @media (min-width: 641px)
    font-size 16px
    padding-top 19px
    padding-bottom 20px

  @media (min-width: 1025px)
    font-size 18px
  
  @media (min-width: 1281px)    
    padding 22px 22px 25px 22px

  &--fill
    color #fff
    border none
    background-image: linear-gradient(111deg, #398bcb 0%, #53bcf0 100%)
    min-width: 220px
    max-width: 300px

    @media (min-width: 641px)
      min-width: 260px
  
  span
    position relative
    z-index 2

  &:before
    content: ''
    position absolute
    top: 0 
    left: 0
    bottom: 0 
    width: 0
    height: 100% 
    background-image: linear-gradient(-111deg, #398bcb 0%, #53bcf0 100%)
    transition: .3s ease-out
  
  &:hover
    color #fff
    &:before
      width: 100%