.reviews-customer
  overflow: hidden

  @media (min-width: 641px)
    padding-top 43px
    padding-bottom 45px

  @media (min-width: 1025px)
    padding-top 56px
    padding-bottom 33px

  @media (min-width: 1281px)  
    padding-top 54px
    padding-bottom 20px

  &__head
    max-width 1085px
    width 100%
    position relative
    z-index 2

    @media (min-width: 1024px)  
      display flex

    @media (min-width: 1281px)  
      max-width 1276px

  &__title
    color: #000000
    font-size: 24px
    font-weight: 400
    line-height: 1.1
    margin-top 0
    margin-bottom 12px
    width 100%

    @media (min-width: 641px)
      font-size: 42px
      margin-bottom 28px
    
    @media (min-width: 1025px)
      margin-bottom 0
    
    @media (min-width: 1281px)  
      font-size: 52px
  
  &__desc
    color: #000
    font-size: 15px
    font-weight: 400
    line-height: 1.4

    @media (min-width: 641px)
      font-size: 18px

    @media (min-width: 1024px)  
      max-width: 450px
      margin-left auto
    
    @media (min-width: 1281px)  
      font-size 20px
  
  &__wrapper
    padding-top 30px
    padding-bottom 30px
    overflow: visible

    @media (min-width: 641px)
      padding-top 55px
      padding-bottom 55px

    @media (min-width: 1025px)
      padding-top 67px
      padding-bottom 67px

    @media (min-width: 1281px)    
      padding-top 80px
      padding-bottom 80px
  
  &__wrapper:not(.swiper-initialized)      
    .reviews-customer
      &__item
        margin-right 50px

  &__item
    width: 280px
    height: 300px
    padding 30px 20px 25px 20px
    box-shadow: 15px 15px 55px rgba(0, 0, 0, 0.1)
    border-radius: 16px
    background-color: #fff
    position relative
    overflow hidden

    @media (min-width: 375px)
      width: 320px
      height: 270px

    @media (min-width: 641px)
      width: 580px
      height 335px
      padding 30px 30px 50px 30px      

    @media (min-width: 1281px)
      width: 775px
      height 433px
      padding 40px 50px 75px 50px
    
    &:after
      content: ''
      position absolute
      top -50px
      right 20px
      width: 176px
      height: 176px
      background-color: #f3fafe
      border-radius: 50%

      @media (min-width: 641px)
        width 282px
        height 282px
        top -100px
        right 83px

      @media (min-width: 1281px)  
        width: 365px
        height: 365px
        top -130px
        right 130px
  
  &__body
    display flex
    height 100%
    position relative
    z-index 2
  
  &__content
    display flex
    flex-direction: column
    max-width: 200px
    width 100%

    @media (min-width: 641px)
      max-width: 358px
  
  &__tags
    display flex
    flex-wrap: wrap
    gap 5px
    margin-bottom 25px

    @media (min-width: 641px)
      margin-bottom 40px

    @media (min-width: 1281px)  
      margin-bottom 64px


  &__tag
    color: #fff
    font-size: 12px
    font-weight: 400
    line-height: 1
    text-align center
    min-width: 145px
    border-radius: 32px
    background-image: linear-gradient(-66deg, #398bcb 0%, #53bcf0 100%)
    padding 10px 20px 10px 17px

    @media (min-width: 375px)
      font-size: 15px
  
  &__name
    color: #000
    font-weight: 400
    line-height: 1.3
    display flex
    flex-direction: column
    max-width: 310px
    width 100%

    strong
      font-size 18px
      margin-bottom 9px

      @media (min-width: 641px)
        font-size: 24px
        margin-bottom 18px        

      @media (min-width: 1281px)  
        font-size: 28px
    
    span
      font-size 13px
      opacity: 0.5
      margin-bottom 10px

      @media (min-width: 641px)
        font-size 15px
        margin-bottom 15px

      @media (min-width: 1281px)  
        font-size: 17px
  
  &__place
    color: #8a8a8a
    font-size: 12px
    font-weight: 400
    line-height: 1.2
    margin-top auto
    margin-bottom 10px
    max-width: 130px

    @media (min-width: 375px)
      font-size: 13px
      max-width: 150px

    @media (min-width: 641px)
      font-size 18px
      margin-bottom 0
      max-width: 100% 

    @media (min-width: 1281px)  
      font-size: 20px

  &__review
    width 100px
    height 100px
    display block
    position absolute
    right 0
    bottom 0

    @media (min-width: 641px)
      width 215px
      height 215px
      top 0
      bottom auto

    @media (min-width: 1281px)  
      width 280px
      height 280px
  
  &__icon
    width 46px
    position absolute
    bottom 3px
    left -8px
    z-index 2

    @media (min-width: 641px)
      width 80px
      left -11px
      bottom 20px

    @media (min-width: 1281px)  
      width 110px
      left -35px
      bottom 50px

    img
      vertical-align top
  
  &__img
    width 100%
    height 100%
    overflow: hidden
    border-radius: 50%
    position relative

    img
      vertical-align top
      width 100%
      height 100%
      position absolute
      top 50%
      left 50%
      transform: translate(-50%, -50%)
      object-fit: cover