.popup
  padding 20px
  margin-left: auto
  margin-right auto
  background-color: rgba(255, 255, 255, 0.20)
  backdrop-filter: blur(10px)

  &:before
    background-color transparent
    opacity 1
  
  &__button-close
    top -35px
    right 0
    outline: none !important
    filter: invert(1)

    @media (min-width: 641px)
      top -50px

    @media (min-width: 960px)
      right -50px
  
  &__inner
    background-color transparent

  &__container
    max-width: 1280px
    width 100%
    padding 50px 20px
    margin-left: auto
    margin-right auto
    background-image: linear-gradient(-59deg, #53bcf0 0%, #398bcb 100%)
    border-radius: 10px

    @media (min-width: 641px)
      padding 100px 50px

    @media (min-width: 960px)
      padding 100px

  &__inner
    width 100%
    margin 0

  &__video
    position relative

    iframe
      width 100%
      height 100%
      object-fit: cover
      position absolute
      top 0
      left 0

    &:before
      content: ''
      top 0
      height 0
      width 100%
      height 100%
      padding-bottom 50%
      display block
    
  &__info
    display flex
    flex-direction: column
    align-items center
    text-align center
    max-width: 600px
    width 100%
    margin-right auto
    margin-left auto

    h2
      color: #fff
      font-size: 24px
      font-weight: 600
      line-height: 1.1
      text-align: center
      margin-top 0

      @media (min-width: 641px)
        font-size 32px
    
    a
      color: #fff
      font-size: 16px
      font-weight: 400
      line-height: 1.1
      text-align: center
      text-decoration none
      margin-bottom 15px

      @media (min-width: 641px)
        font-size: 20px
    