  &__content
    color: #fff
    overflow: hidden
    border-radius: 16px
    border: 1px solid #ffffff
    opacity: 0.3
    padding 26px 22px
    height 100%
    transition: box-shadow .3s, background-color .3s, ease .3s

    span
      font-size: 17px
      font-weight: 400
      line-height: 1.4
      user-select: none
  
  &__more
    color: #fff
    font-size: 15px
    font-weight: 100
    line-height: 1
    text-align: center
    text-decoration none
    width: 20px
    height: 20px
    border-radius: 50%
    background-image: linear-gradient(180deg, #398bcb 0%, #53bcf0 100%)
    display flex
    align-items center
    justify-content center
    position absolute
    bottom -16px
    right 22px
    opacity 0
    visibility hidden
    transition: opacity .3s, bottom .3s, ease .3s

    span
      line-height: 1
      transform: translateY(-1px)