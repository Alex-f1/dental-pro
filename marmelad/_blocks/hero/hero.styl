.hero
  padding-top 130px
  padding-bottom 50px
  background-image: linear-gradient(-59deg, #53bcf0 0%, #398bcb 100%)
  overflow: hidden
  position relative
  
  @media (min-width: 1025px)
    padding-bottom 63px
  
  @media (min-height: 570px)
    height 100vh !important

  &__pic
    position absolute
    top 50%
    left 50%
    transform: translate(-50%, -90%)
    width 260px
    height 260px
    z-index 1

    @media (min-width: 641px)
      width 450px
      height 450px
      transform: translate(-50%, -60%)

    @media (min-width: 1025px)
      width 382px
      height 382px
    
    @media (min-width: 1025px) and (max-height: 739px)
      width 375px
      height 375px

    @media (min-width: 1281px)
      width 525px
      height 525px
      margin-top -70px
      transform: translate(-50%, -40%)

    img
      vertical-align top

  &__container
    height 100%

  &__inner
    display flex
    flex-direction: column
    height 100%

  &__content
    max-width: 1340px
    width 100%
    // margin-right 150px
    margin-right auto
    margin-top auto
    margin-left auto
    display flex
    flex-direction: column
    align-items center
    position relative
    z-index 2
    margin-bottom 20px

    h1
      color: #ffffff
      font-size: 32px
      font-weight: 600
      line-height: 1.1
      text-align: center
      text-transform: uppercase
      max-width: 830px
      margin-top 0
      margin-bottom 10px

      @media (min-width: 375px)
        font-size 38px

      @media (min-width: 641px)
        font-size: 65px
        bottom 28px

      @media (min-width: 1025px)
        margin-bottom 20px

      @media (min-width: 1281px)
        font-size: 90px
        margin-bottom 35px
      
      @media (min-width: 641px) and (max-height: 739px)
        font-size: 50px 
        margin-bottom: 20px 
  
  &__desc
    color: #ffffff
    font-size: 16px
    font-weight: 400
    line-height: 1.5
    text-align center

    @media (min-width: 641px)
      text-align left
      max-width: 490px
      width 100%
      font-size 18px
      margin-left auto
    
    @media (min-width: 1025px)
      max-width: 630px

    @media (min-width: 641px) and (max-height: 739px)
      font-size: 14px

    @media (min-width: 1360px)  
      font-size 20px
  
.online-chat
  width 44px
  height 45px
  right 24px
  bottom 40px
  position absolute
  z-index 150
  cursor pointer
  display none
  
  @media (min-width: 641px)
    right 40px
    bottom 28px

  @media (min-width: 1025px)
    width 55px
    height 57px

  @media (min-width: 1281px)  
    width 70px
    height 72px
    
  @media (min-width: 1900px) 
    right 152px
    bottom 150px
  
  @media (min-height: 570px)
    position fixed
  
  &._is-active
    .online-chat
      &__social-links
        opacity 1
        visibility visible
        transform: translateX(-50%) translateY(0)
      
    i
      opacity 0
  
  i
    display block
    transition: opacity .3s, ease .3s

    img
      vertical-align top
  
  &__social-links
    display flex
    flex-direction: column
    align-items center
    gap 16px
    width 100%
    position absolute
    top -100px
    left 50%
    transform: translateX(-50%) translateY(200px)
    opacity 0
    visibility hidden
    transition: opacity .3s, transform .3s, ease .3s
  
  &__social-link
    flex 0 0 35px
    width 35px
    max-width: 35px
    height 35px

.online-chat-overlay
  position: fixed
  left: 0
  right: 0
  top: 0
  bottom: 0
  background-color: rgba(57, 139, 203, 0.4)
  backdrop-filter: blur(10px)
  opacity: 0
  visibility: hidden
  z-index: 149
  transition: opacity .3s, ease .3s

  &._is-opened
    opacity 1
    visibility visible
